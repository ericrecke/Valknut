<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="controller.PedidoController">
    <children>
        <!-- Contenedor principal -->
        <VBox prefHeight="575.0" prefWidth="800.0" spacing="10" style="-fx-padding: 20; ">
            <!-- Título -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestión de Pedidos" />
            
            <!-- Botones de CRUD -->
            <HBox spacing="10">
                <Button onAction="#crearPedido" text="Crear" />
                <Button onAction="#leerPedido" text="Leer" />
                <Button onAction="#actualizarPedido" text="Actualizar" />
                <Button onAction="#eliminarPedido" text="Eliminar" />
            </HBox>
            
            <!-- Tabla para mostrar Pedidos -->
            <TableView fx:id="tablaPedidos">
                <columns>
                    <TableColumn fx:id="colId" text="ID" />
                    <TableColumn fx:id="colNombre" text="Nombre" />
                    <TableColumn fx:id="colEmail" text="Email" />
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
